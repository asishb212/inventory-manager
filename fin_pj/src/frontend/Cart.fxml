<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.collections.*?>

<?import java.lang.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
 prefHeight="800.0" prefWidth="1600.0" 
 xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
 fx:controller="frontend.Cart_controller">

<top>
<AnchorPane maxHeight="100.0" maxWidth="1600.0" prefHeight="400.0" prefWidth="1600.0" >
    <MenuBar maxHeight="100.0" maxWidth="1600.0" prefHeight="400.0" prefWidth="1600.0"
       style="-fx-background-color: #A59079; -fx-text-fill:WHITE;" >
        <menus>
            <Menu text="File" style="-fx-font-size: 50; -text-color: WHITE;">
                <items>
                    <MenuItem text="Home" onAction="#handleHome"/>
                    <MenuItem text="Logout" onAction="#handleLogout"/>
                    <MenuItem text="Exit" onAction="#handleExit"/>
                </items>
            </Menu>
            <Menu text="View" style="-fx-font-size: 50; -fx-text-fill: WHITE;">
            
                <items>
                    <MenuItem text="Inventory" onAction="#handleInventory"/>
                    <MenuItem text="Insights" onAction="#handleInsights"/>
                </items>
            </Menu>
            <Menu text="Account" style="-fx-font-size: 50; -fx-text-fill: WHITE;">
                <items>
                    <MenuItem text="Info" onAction="#handleInfo"/>
                    <MenuItem text="Change password" onAction="#handlePwd"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    
    
</AnchorPane>
</top>

<left>
    <AnchorPane fx:id="searchOP" maxHeight="800.0" prefWidth="1000.0" style="-fx-background-color: #FFFFFF;">
        <children>  
                <ScrollPane fx:id="scrollPane" prefHeight="600.0" prefWidth="1000.0" visible="true" stylesheets="@update_item_css.css"
                            layoutX="20" layoutY="100">
                    <content>
                        <GridPane fx:id="detailsGrid" hgap="10" vgap="5">
                        </GridPane>
                    </content>
                </ScrollPane>
        </children>
    </AnchorPane>
</left>


<right>
<AnchorPane maxHeight="800.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" BorderPane.alignment="CENTER">
    <children>
    
    <Button fx:id="OrderButton" 
        layoutX="60.0" layoutY="150"
        prefWidth="400" prefHeight="100" 
        mnemonicParsing="false" onAction="#handleOrder" style="-fx-background-color: orange; -fx-font-size: 40" 
        text="Confirm and order" textFill="WHITE" />

    <Button fx:id="CancelButton" 
        layoutX="60.0" layoutY="300" 
        prefWidth="400" prefHeight="100"
        mnemonicParsing="false" onAction="#handleCancel" style="-fx-background-color: orange; -fx-font-size: 40;" 
        text="Cancel" textFill="WHITE" />
        

    </children>
    </AnchorPane>
</right>
</BorderPane>