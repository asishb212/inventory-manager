<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="800.0" prefWidth="1600.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="frontend.newUser_controller">

   <top>
      <AnchorPane maxHeight="100.0" maxWidth="1600.0" prefHeight="400.0" prefWidth="1600.0">
         <MenuBar maxHeight="100.0" maxWidth="1600.0" prefHeight="400.0" prefWidth="1600.0" 
                  style="-fx-background-color: #A59079; -fx-text-fill:  #000000;">
            <menus>
               <Menu text="File" style="-fx-font-size: 50; -text-color: #000000;">
                  <items>
                     <MenuItem text="Exit" onAction="#handleExit"/>
                  </items>
               </Menu>
            </menus>
         </MenuBar>
      </AnchorPane>
   </top>

   <left>
      <AnchorPane prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: #000080;" 
                  BorderPane.alignment="CENTER">
         <children>
            <Text fill="WHITE" layoutX="120.0" layoutY="422.0" strokeWidth="0.0" text="Inventory Manager">
               <font>
                  <Font name="Roboto" size="70.0" />
               </font>
            </Text>
            <Label fx:id="label" text="Label" />
         </children>
      </AnchorPane>
   </left>
   <right>
      <AnchorPane prefHeight="500.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0" 
               BorderPane.alignment="CENTER" style="-fx-background-color: #e8e8e8; -fx-background-radius: 20;" 
               layoutX="200.0" layoutY="230.0" spacing="10">
         </VBox>

         <children>

            <Text fill="#000080" strokeWidth="0.0" text="Login" layoutX="320.0" layoutY="300.0">
               <font>
                  <Font name="Roboto" size="60.0" />
               </font>
            </Text>

            <TextField fx:id="usernameField" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="User Id" layoutX="250.0" layoutY="350.0" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" />

            <PasswordField fx:id="passwordField" 
                           prefWidth="200.0" prefHeight="40.0" maxWidth="200" layoutX="250.0" layoutY="400.0" 
                           promptText="Password" 
                           style="-fx-background-color: transparent; -fx-border-color: #000080; 
                           -fx-border-width: 2px 2px 2px 2px;" />
            
            <PasswordField fx:id="confirmPasswordField" 
                           prefWidth="200.0" prefHeight="40.0" maxWidth="200" layoutX="250.0" layoutY="450.0" 
                           promptText="Confirm Password" 
                           style="-fx-background-color: transparent; -fx-border-color: #000080; 
                           -fx-border-width: 2px 2px 2px 2px;" />

            <Button fx:id="createAccount" layoutX="275.0" layoutY="500.0" prefWidth="100" prefHeight="40" 
                    mnemonicParsing="false" onAction="#create_account_button_handler" style="-fx-background-color: #BAEC00" 
                    text="Create account" textFill="WHITE" />

            <Button fx:id="cancel" layoutX="475.0" layoutY="500.0" prefWidth="100" prefHeight="40" 
                    mnemonicParsing="false" onAction="#cancel_button_handler" style="-fx-background-color: #B30C00" 
                    text="Cancel" textFill="WHITE" />

         </children>
      </AnchorPane>
   </right>




</BorderPane>
