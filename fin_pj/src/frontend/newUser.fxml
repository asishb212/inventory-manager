<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.ComboBox?>

<?import java.lang.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="800.0" prefWidth="1600.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="frontend.newUser_controller">

   <top>
      <AnchorPane maxHeight="100.0" maxWidth="1600.0" prefHeight="400.0" prefWidth="1600.0">
         <MenuBar maxHeight="100.0" maxWidth="1600.0" prefHeight="400.0" prefWidth="1600.0" 
                  style="-fx-background-color: #A59079; -fx-text-fill:  #000000;">
            <menus>
               <Menu text="File" style="-fx-font-size: 50; -text-color: #000000;">
                  <items>
                     <MenuItem text="Exit" onAction="#handleExit"/>
                  </items>
               </Menu>
            </menus>
         </MenuBar>
      </AnchorPane>
   </top>

   <left>
      <AnchorPane prefHeight="800.0" prefWidth="800.0" style="-fx-background-color: #000080;" 
                  BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="label" prefHeight="700" prefWidth="800"
                   layoutX="15" layoutY="15"
                   style="-fx-font-size: 15; -fx-text-fill: #FFFFFF;"/>
         </children>
      </AnchorPane>
   </left>
   <right>
      <AnchorPane prefHeight="500.0" prefWidth="800.0" BorderPane.alignment="CENTER">
      
         <children>

            <Text fill="#000080" strokeWidth="0.0" text="Create Account" layoutX="240.0" layoutY="50.0">
               <font>
                  <Font name="Roboto" size="60.0" />
               </font>
            </Text>

            <TextField fx:id="usernameField" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="User Id" layoutX="100" layoutY="100.0" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" />

            <PasswordField fx:id="passwordField" 
                           prefWidth="200.0" prefHeight="40.0" maxWidth="200" layoutX="100" layoutY="150.0" 
                           promptText="Password" 
                           style="-fx-background-color: transparent; -fx-border-color: #000080; 
                           -fx-border-width: 2px 2px 2px 2px;" />
            
            <PasswordField fx:id="confirmPasswordField" 
                           prefWidth="200.0" prefHeight="40.0" maxWidth="200" layoutX="100" layoutY="200.0" 
                           promptText="Confirm Password" 
                           style="-fx-background-color: transparent; -fx-border-color: #000080; 
                           -fx-border-width: 2px 2px 2px 2px;" />

            <TextField fx:id="firstName" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="First name" layoutX="100" layoutY="250.0" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" />

            <TextField fx:id="lastName" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="Last name" layoutX="100" layoutY="300.0" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" />

            <TextField fx:id="phoneNumber" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="Phone number" layoutX="100" layoutY="350.0" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" />

            <TextField fx:id="email" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="email" layoutX="100" layoutY="400.0" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" />

            <TextField fx:id="AddStreet" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="Street address" layoutX="400" layoutY="100" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" />

            <TextField fx:id="Addcity" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="City" layoutX="400" layoutY="150" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" />

            <TextField fx:id="Addstate" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="State" layoutX="400" layoutY="200" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" />

            <TextField fx:id="Addcountry" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="Country" layoutX="400" layoutY="250" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" />

            <TextField fx:id="Addzip" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="Zip Code" layoutX="400" layoutY="300.0" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" />

            <ComboBox fx:id="userType" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="User type" layoutX="400" layoutY="350.0" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" 
                       onAction="#comboBoxChanged" >
               <items>
                  <FXCollections fx:factory="observableArrayList">
                     <String fx:value="Customer"/>
                     <String fx:value="Supplier"/>
                  </FXCollections>
               </items>
            </ComboBox>

            <TextField fx:id="supp_name" prefWidth="200.0" prefHeight="40.0" maxWidth="200" 
                       promptText="Supplier name" layoutX="400" layoutY="400.0" 
                       style="-fx-background-color: transparent; -fx-border-color: #000080; 
                       -fx-border-width: 2px 2px 2px 2px;" 
                       visible="false"/>   

            <Button fx:id="createAccount" layoutX="275.0" layoutY="500.0" prefWidth="100" prefHeight="40" 
                    mnemonicParsing="false" onAction="#create_account_button_handler" style="-fx-background-color: #BAEC00" 
                    text="Create account" textFill="WHITE" />

            <Button fx:id="cancel" layoutX="475.0" layoutY="500.0" prefWidth="100" prefHeight="40" 
                    mnemonicParsing="false" onAction="#cancel_button_handler" style="-fx-background-color: #B30C00" 
                    text="Cancel" textFill="WHITE" />

         </children>
      </AnchorPane>
   </right>




</BorderPane>
