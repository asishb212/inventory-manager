<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
    prefHeight="800.0" prefWidth="1600.0"
    xmlns="http://javafx.com/javafx/8"
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="frontend.update_password_controller">

    <top>
        <AnchorPane maxHeight="100.0" maxWidth="1600.0" prefHeight="400.0" prefWidth="1600.0">
            <MenuBar maxHeight="100.0" maxWidth="1600.0" prefHeight="400.0" prefWidth="1600.0" 
                     style="-fx-background-color: #A59079; -fx-text-fill:WHITE;">
                <menus>
                    <Menu text="File" style="-fx-font-size: 50; -text-color: WHITE;">
                        <items>
                            <MenuItem text="Logout" onAction="#handleLogout"/>
                            <MenuItem text="Exit" onAction="#handleExit"/>
                            <MenuItem text="Home" onAction="#handleHome"/>

                        </items>
                    </Menu>
                    <Menu text="View" style="-fx-font-size: 50; -fx-text-fill: WHITE;">

                        <items>
                            <MenuItem text="Inventory" onAction="#handleInventory"/>
                            <MenuItem text="Insights" onAction="#handleInsights"/>
                        </items>
                    </Menu>
                    <Menu text="Account" style="-fx-font-size: 50; -fx-text-fill: WHITE;">
                        <items>
                            <MenuItem text="Info" onAction="#handleInfo"/>
                            <MenuItem text="Change password" onAction="#handlePwd"/>
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
        </AnchorPane>
    </top>

    <left>
        <AnchorPane maxHeight="800.0" prefWidth="1000.0" style="-fx-background-color: #000080;" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="label" prefHeight="700" prefWidth="800"
                   layoutX="15" layoutY="15"
                   style="-fx-font-size: 15; -fx-text-fill: #FFFFFF;"/>
            </children>
        </AnchorPane>
    </left>

    <right>
        <AnchorPane maxHeight="800.0" prefWidth="600.0" style="-fx-background-color: #FFFFFF;" BorderPane.alignment="CENTER">
            <children>
                <PasswordField fx:id="passwordField" 
                           prefWidth="200.0" prefHeight="40.0" maxWidth="200" layoutX="100" layoutY="150.0" 
                           promptText="Password" 
                           style="-fx-background-color: transparent; -fx-border-color: #000080; 
                           -fx-border-width: 2px 2px 2px 2px;" />
            
                <PasswordField fx:id="confirmPasswordField" 
                           prefWidth="200.0" prefHeight="40.0" maxWidth="200" layoutX="100" layoutY="200.0" 
                           promptText="Confirm Password" 
                           style="-fx-background-color: transparent; -fx-border-color: #000080; 
                           -fx-border-width: 2px 2px 2px 2px;" />

                <Button fx:id="ChangePwd" layoutX="175.0" layoutY="500.0" prefWidth="100" prefHeight="40" 
                    mnemonicParsing="false" onAction="#change_pwd_button_handler" style="-fx-background-color: #BAEC00" 
                    text="Change password" textFill="WHITE" />

                <Button fx:id="cancel" layoutX="375.0" layoutY="500.0" prefWidth="100" prefHeight="40" 
                    mnemonicParsing="false" onAction="#cancel_button_handler" style="-fx-background-color: #B30C00" 
                    text="Cancel" textFill="WHITE" />
            </children>
        </AnchorPane>
    </right>
</BorderPane>